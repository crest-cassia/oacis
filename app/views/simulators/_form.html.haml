= form_for @simulator, html: {class: 'form-horizontal'}, builder: ApplicationFormBuilder do |f|
  = render partial: 'shared/error_messages', locals: {error_messages: @simulator.errors.full_messages}
  - has_ps = @simulator.parameter_sets.present?
  .form-group
    = f.label_with_tooltip(:name, ['simulators', 'name'])
    .col-md-3
      = f.text_field(:name, class: ['form-control'])
  .form-group
    = label_with_tooltip('Definition of Parameters', 'simulators','definition_of_parameters').html_safe
    .col-md-10
      #parameters_form
      = f.fields_for :parameter_definitions do |builder|
        = render partial: 'executable/parameter_definition_fields', locals: {f: builder, disabled: has_ps}
      #add_field_here
      .form-group.row.no-margin.no-gutter.small-margin-bottom
        .col-md-3
          = text_field_tag '__dummy__', "_seed", {disabled: true, class: 'form-control'}
        .col-md-2
          = select_tag '__dummy__', options_for_select(['seed']), {disabled: true, class: 'form-control'}
        .col-md-3
          = text_field_tag '__dummy__', "-", {disabled: true, class: 'form-control'}
      .form-group.row.no-margin.no-gutter
        .col-md-8
          = text_area_tag '__dummy__', "Random number seed", rows: 3, disabled: true, class: 'form-control'
      = link_to_add_fields "Add Parameter", f, :parameter_definitions, 'executable/parameter_definition_fields' unless has_ps
  .form-group
    = f.label_with_tooltip(:pre_process_script, ['simulators','pre_process_script'])
    .col-md-6
      = f.text_area(:pre_process_script, rows: 3, class: 'form-control')
  .form-group
    = f.label_with_tooltip(:local_pre_process_script, ['simulators','local_pre_process_script'])
    .col-md-6
      = f.text_area(:local_pre_process_script, rows: 1, class: 'form-control')
  .form-group
    = f.label_with_tooltip(:command, ['simulators','command'])
    .col-md-6
      = f.text_field(:command, class: 'form-control')
  .form-group
    = f.label_with_tooltip(:print_version_command, ['simulators','print_version_command'])
    .col-md-6
      = f.text_field(:print_version_command, class: 'form-control')
  .form-group
    = f.label_with_tooltip(:support_input_json, "Input type", ['simulators','input_type'])
    .col-md-3
      = f.select(:support_input_json, {"Argument" => false, "JSON" => true}, {},{class: 'form-control'})
  .form-group
    = f.label_with_tooltip(:support_mpi, ['simulators','support_mpi'])
    .col-md-2
      .checkbox
        %label
          = f.check_box(:support_mpi)
  .form-group
    = f.label_with_tooltip(:support_omp, ['simulators','support_omp'])
    .col-md-2
      .checkbox
        %label
          = f.check_box(:support_omp)
  .form-group
    = f.label_with_tooltip(:sequential_seed, ['simulators','sequential_seed'])
    .col-md-2
      .checkbox
        %label
          = f.check_box(:sequential_seed)
  .form-group
    = f.label_with_tooltip(:description, ['simulators','description'])
    .col-md-6
      = f.text_area(:description, rows: 5, class: 'form-control')
  .form-group
    = label_with_tooltip('Executable_on', 'simulators', 'executable_on').html_safe
    .col-md-10
      = hidden_field_tag "simulator[executable_on_ids][]", nil
      - Host.all.each do |host|
        .checkbox
          %label{ for: dom_id(host) }
            = check_box_tag "simulator[executable_on_ids][]", host.id.to_s, @simulator.executable_on_ids.include?(host.id), id: dom_id(host)
            = host.name
  - if @duplicating_simulator
    .form-group
      %label.col-md-2.control-label
        Analyzers to copy
      .col-md-10
        = hidden_field_tag "duplicating_simulator", @duplicating_simulator.id
        - @duplicating_simulator.analyzers.each do |azr|
          .checkbox
            %label{ for: dom_id(azr) }
              = check_box_tag "copied_analyzers[]", azr.id.to_s, @copied_analyzers.include?(azr), id: dom_id(azr)
              = "#{azr.simulator.name} / #{azr.name}"
  .form-group
    .col-md-4.col-md-offset-2
      = f.submit(class: 'btn btn-primary')
      = link_to('Cancel', simulators_path, class: ['btn', 'btn-default'])

:javascript
  $(function() {
    $('[data-toggle="tooltip"]').tooltip();
  });
